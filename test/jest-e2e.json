{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../src/$1",
    "^@resources/(.*)$": "<rootDir>/../src/resources/$1",
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@shared/(.*)$": "<rootDir>/../src/shared/$1"
  },
  "watchPathIgnorePatterns": ["node_modules"]
}
